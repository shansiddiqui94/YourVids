<p style="color: green"><%= notice %></p>

<h1>Courses</h1>

<%= link_to new_course_path, class: "btn-floating btn-large waves-effect waves-light red" do  %>
  <i class="material-icons"> add </i>
<% end %>

<table>
  <thead>
      <tr>
        <th>Title</th>
      </tr>
  </thead>

  <tbody>
      <% @courses.each do |course| %>
          <tr class="row">
            <td><%= link_to course.title, course %></td>
            <td class="col s0" style="text-align: center">
              <%= link_to edit_course_path(course) do %>
                  <i class="material-icons">edit</i>
                  <%end%>
              </td>

              <td class="col s0" style="text-align: center">
              <%= button_to course, method: :delete, data: {confirm: 'Are you sure?'} do %>
                  <i class="material-icons">delete</i>
                <%end%>
            </td>
          </tr>
        <% end %>
  </tbody>
</table>




